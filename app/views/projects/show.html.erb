<br>
<h2 style="text-align: center"><%= @project.title %></h2>

<% categories.each do |c| %>
  <%= render partial: 'task', locals: {type: "#{c}"} %>
<% end %>

<div style="width: 100%; float: left">
<% if current_user && current_user.id == @project.owner %>
  <%= button_to "Add Task", new_project_task_path(project_id: @project.id), method: :get, form: {style: 'display:inline-block;'} %>
  <%= button_to "Delete Project", project_path(@project), method: :delete, form: {style: 'display:inline-block;'}, data: {confirm: 'Are you sure?'} %>
<% elsif current_user %>
  <%= button_to "Add Task", new_project_task_path(project_id: @project.id), method: :get, form: {style: 'display:inline-block;'} %>
<% end %>
  <br><br><br>
</div>