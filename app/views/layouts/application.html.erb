<!DOCTYPE html>
<html>
  <head>
    <title>IKanban</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= flash_alert? %>
    <%= yield %>
    <div class="navbar">
      <% if current_user %>
        <%= button_to "My Projects", user_path(current_user), method: :get, form: {style: 'display:inline-block;'} %>
        <%= button_to "Account", user_account_path(current_user), method: :get, form: {style: 'display:inline-block;'} %>
        <%= button_to "Log Out", logout_path, method: :post, form: {style: 'display:inline-block;'} %>
      <% end %>
    </div>
  </body>
</html>
